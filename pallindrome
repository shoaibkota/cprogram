#include<stdio.h>
void main()
{
    int n,rev=0,temp,r;
    printf("enter the digit");
    scanf("%d",&n);
    temp=n;
    while(n!=0)
    {
        r=n%10;
        rev=rev*10+r;
        n=n/10;
    }
    printf("rev of the digit is %d",rev);
    if(temp==rev)
    {
    printf("\nthe pallindrome is %d",rev);
    }
    else
    printf("\nnot pallindrome %d",rev);
}
